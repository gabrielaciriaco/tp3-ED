  "version": "0.2.0",
  "configurations": [
      {
          "name": "g++ - Build and debug active file",
          "type": "cppdbg",
          "request": "launch",
          "args": ["entrada.txt"],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "program": "${workspaceFolder}/bin/run.out",
          "miDebuggerPath": "/usr/bin/gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "sourceFileMap": {
              "/build/glibc-eX1tMB": "/usr/src/glibc"
          },
          "preLaunchTask": "g++ - compile file",
      },
      {
          "name": "g++ - Debug tests",
          "type": "cppdbg",
          "request": "launch",
 
         "args": [
              "<",
              "${workspaceFolder}/tests/3.in"
          ],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "program": "${workspaceFolder}/bin/run.out",
          "miDebuggerPath": "/usr/bin/gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "sourceFileMap": {
              "/build/glibc-eX1tMB": "/usr/src/glibc"
          },
      }
  ]
}